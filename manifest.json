{
  "manifest_version": 3,
  "name": "FocusRead - Advanced Reading Assistant",
  "version": "2.0.0",
  "description": "Professional reading enhancement with text complexity analysis, focused reading modes, and productivity tracking. Built with WebRay-M.",
  "permissions": [
    "activeTab",
    "tabs",
    "sidePanel",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_title": "FocusRead - Click to open reading assistant"
  },
  "commands": {
    "toggle_sidebar": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Toggle FocusRead sidebar"
    },
    "analyze_current_page": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Analyze current page readability"
    },
    "toggle_blur_mode": {
      "suggested_key": {
        "default": "Alt+B"
      },
      "description": "Toggle blur reading mode"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  }
}